{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/__pycache__/**": true,
        "dist": true,
        "**/env": true,
        "*.egg-info": true,
        "**/.mypy_cache": true
    },
    "search.exclude": {
        "generated-stub-files": true,
    },

    "python.formatting.provider": "autopep8",
    "python.formatting.autopep8Args": [
        "--ignore=E501,E27,E251,E402"
    ],
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.extraPaths": [
        "./generated-stub-files/motionbuilder-2025",
    ],
}